{
  "name": "ai-chatbot-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install": "npm run install:backend && npm run install:frontend",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev": "concurrently \"npm:dev:*\"",
    "build:frontend:prod": "npm --prefix frontend run build",
    "start:backend:prod": "npm --prefix backend start",
    "serve:frontend:prod": "serve -s frontend/build",
    "prod": "npm run build:frontend:prod && concurrently \"npm run serve:frontend:prod\" \"npm run start:backend:prod\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "serve": "^14.0.0"
  }
}
